<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_weather_log_entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/back"
        tools:context="k.weathlog.WeatherLogShowEntryActivity">

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="150dp"
                 android:id="@+id/entry_conditions_frame"
    ></FrameLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="200dp"
              android:layout_below="@id/entry_conditions_frame"
              android:layout_margin="20dp"
              android:id="@+id/entry_comment"
              android:textColor="@color/text"
              android:gravity="top"
              android:textAlignment="center"
    />
</RelativeLayout>
