<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                tools:context="k.weathlog.FiveDayForecastElement">



    <ImageView android:layout_width="40dp"
               android:layout_height="40dp"
               android:id="@+id/five_day_forecast_element_icon"
               android:layout_centerVertical="true"
               android:src="@drawable/sunny"
               android:layout_marginLeft="20dp"/>

    <TextView android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:id="@+id/date"
              android:layout_toRightOf="@id/five_day_forecast_element_icon"
              android:layout_marginLeft="20dp"
              android:text="Fri"
              android:textColor="@color/text"
              android:textSize="@dimen/bigger_font_size"/>

    <TextView android:layout_width="40dp"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@id/date"
              android:id="@+id/temperature"
              android:layout_marginLeft="20dp"
              android:text="5"
              android:textColor="@color/text"
              android:textSize="@dimen/bigger_font_size"/>

    <TextView android:layout_width="45dp"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@id/temperature"
              android:id="@+id/degree_celcius"
              android:text="Â°C"
              android:textColor="@color/text"
              android:textSize="@dimen/bigger_font_size"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:id="@+id/conditions"
              android:textAlignment="center"
              android:layout_toRightOf="@+id/degree_celcius"
              android:text="Mostly Cloudy"
              android:textColor="@color/text"
              android:textSize="@dimen/smaller_font_size"
    />
</RelativeLayout>
